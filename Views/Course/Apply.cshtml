@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Course</title>
</head>
<body>

     <div class="container m-4">
        <div class="card mx-auto" style="width:500px;">
            <div class="card-header">
               Başvuru Formu
            </div>
            <div class="card-body">
                    <form asp-action="apply" method="POST">
                        <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <label asp-for="Name">Adınız</label>
                                <input asp-for="Name" class="form-control">
                            </div>

                           <div class="form-group">
                                <label asp-for="Mail">E-posta</label>
                                <input asp-for="Mail" class="form-control">
                            </div>

                           <div class="form-group">
                                <label asp-for="Phone">Telefon</label>
                                <input asp-for="Phone" class="form-control">
                            </div>

                            <div class="form-group">
                                <label asp-for="Confirm">Kursa Katılacak mısınız ?</label>
                                <select asp-for="Confirm" class="form-control">
                                    <option value="">Seçiniz...</option>
                                    <option value="true">Evet ,geliyorum.</option>
                                    <option value="false">Hayır ,gelmiyorum.</option>
                                </select>
                            </div>
                        <input type="submit" value="Gönder" class="btn btn-primary btn-block">
                    </form>
            </div>
        </div>
    </div>
</body>
</html>